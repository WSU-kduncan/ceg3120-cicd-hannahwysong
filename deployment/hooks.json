[
  {
    "id": "deploy-script",
    "execute-command": "/home/ubuntu/ceg3120-cicd-hannahwysong/deployment/container.sh",
    "command-working-directory": "/home/ubuntu/ceg3120-cicd-hannahwysong/angular-site",
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "value",
            "value": "main",
            "parameter": {
              "source": "payload",
              "name": "workflow_run.head_branch"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "completed",
            "parameter": {
              "source": "payload",
              "name": "action"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "success",
            "parameter": {
              "source": "payload",
              "name": "workflow_run.conclusion"
            }
          }
        },
        {
          "match": {
            "type": "payload-hmac-sha1",
            "secret": "secret",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  }
]

